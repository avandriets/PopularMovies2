<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    tools:context="com.avandriets.myappportfolio.popularmoviesi.MainActivity">

    <!--
    This layout is a two-pane layout for the Items master/detail flow.
    -->

    <FrameLayout
        android:id="@+id/fragment_film_list"
        android:name="com.avandriets.myappportfolio.popularmoviesi.MainActivityFragment"
        android:layout_width="@dimen/frame_with"
        android:layout_height="match_parent"
        tools:layout="@android:layout/list_content"
        android:tag="FLTAG"/>

    <FrameLayout
        android:id="@+id/film_detail_container_tablet"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</LinearLayout>